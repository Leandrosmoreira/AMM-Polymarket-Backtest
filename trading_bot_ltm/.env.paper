# Paper Trading Mode Configuration
# =================================

# Simulation mode - NO REAL ORDERS (required for paper trading)
DRY_RUN=true

# Simulated balance for paper trading
SIM_BALANCE=1000

# Bot Configuration
TARGET_PAIR_COST=0.991
ORDER_SIZE=10
ORDER_TYPE=FOK

# Cooldown between trades
COOLDOWN_SECONDS=10

# Logging
VERBOSE=true
USE_RICH_OUTPUT=true
ENABLE_STATS=true

# LTM (Liquidity Time Model) - enabled for smarter trading
USE_LTM=true
LTM_POLICY_PATH=ltm_policy.yaml
LTM_USE_DECAY=true

# API Credentials (not needed for paper trading, but set empty)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=
POLYMARKET_PRIVATE_KEY=
POLYMARKET_SIGNATURE_TYPE=1
POLYMARKET_FUNDER=

# WebSocket (disabled for paper mode)
USE_WSS=false

# Market auto-discovery (leave empty)
POLYMARKET_MARKET_SLUG=
