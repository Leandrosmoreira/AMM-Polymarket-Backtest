# ===========================================
# LIVE TRADING CONFIGURATION - $100 Account
# ===========================================

# ⚠️  MODO LIVE - ORDENS REAIS!
DRY_RUN=false

# ===========================================
# API CREDENTIALS (obrigatório para live)
# ===========================================
# Obtenha em: https://polymarket.com/settings/api
POLYMARKET_PRIVATE_KEY=0x_SUA_PRIVATE_KEY_AQUI
POLYMARKET_FUNDER=0x_SEU_FUNDER_ADDRESS_AQUI
POLYMARKET_SIGNATURE_TYPE=1

# ===========================================
# CONFIGURAÇÃO CONSERVADORA PARA $100
# ===========================================

# Ordem mínima no Polymarket é $5
# Com $100, máximo de 10 trades simultâneos
ORDER_SIZE=5

# Threshold conservador - só entra quando lucro > 1%
TARGET_PAIR_COST=0.99

# Tipo de ordem: FOK = Fill or Kill (executa tudo ou nada)
ORDER_TYPE=FOK

# Cooldown entre trades (segundos)
COOLDOWN_SECONDS=30

# ===========================================
# GERENCIAMENTO DE RISCO
# ===========================================

# Perda máxima diária (para em $10 de perda)
MAX_DAILY_LOSS=10

# Tamanho máximo de posição
MAX_POSITION_SIZE=20

# Máximo de trades por dia
MAX_TRADES_PER_DAY=50

# Saldo mínimo para continuar (para se chegar a $20)
MIN_BALANCE_REQUIRED=20

# Usar máximo 80% do saldo
MAX_BALANCE_UTILIZATION=0.8

# ===========================================
# LTM (Liquidity Time Model)
# ===========================================
USE_LTM=true
LTM_POLICY_PATH=ltm_policy.yaml
LTM_USE_DECAY=true

# ===========================================
# LOGGING
# ===========================================
VERBOSE=true
USE_RICH_OUTPUT=true
ENABLE_STATS=true

# WebSocket para preços em tempo real
USE_WSS=false
