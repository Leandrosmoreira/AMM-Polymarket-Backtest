# =============================================================================
# POLYMARKET TRADING BOT - CONFIGURAÇÃO
# =============================================================================
# 
# INSTRUÇÕES:
# 1. Copie este arquivo para .env: cp .env.example .env
# 2. Preencha suas credenciais da API
# 3. Ajuste os parâmetros conforme necessário
# 4. NUNCA commite o arquivo .env no git!
#
# Este arquivo serve para AMBOS os bots (Bot 1 e Bot 2)
#
# =============================================================================

# =============================================================================
# API CREDENTIALS (OBRIGATÓRIO)
# =============================================================================
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_API_SECRET=your_api_secret_here
POLYMARKET_API_PASSPHRASE=your_passphrase_here
POLYMARKET_PRIVATE_KEY=your_private_key_here
POLYMARKET_SIGNATURE_TYPE=1
POLYMARKET_FUNDER=

# =============================================================================
# MARKET CONFIGURATION
# =============================================================================
POLYMARKET_MARKET_SLUG=btc-updown-15m-1234567890
POLYMARKET_MARKET_ID=
POLYMARKET_YES_TOKEN_ID=
POLYMARKET_NO_TOKEN_ID=
POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com

# =============================================================================
# TRADING PARAMETERS
# =============================================================================
TARGET_PAIR_COST=0.99
BALANCE_SLACK=0.15
ORDER_SIZE=50
ORDER_TYPE=FOK
YES_BUY_THRESHOLD=0.45
NO_BUY_THRESHOLD=0.45

# =============================================================================
# MARKET MAKER (BOT 2)
# =============================================================================
MM_BASE_SPREAD=0.02
MM_MAX_POSITION=100
MM_REQUOTE_THRESHOLD=0.005
MM_VOLATILITY_LOOKBACK=100

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
MAX_DAILY_LOSS=100
MAX_POSITION_SIZE=500
MAX_TRADES_PER_DAY=50
MIN_BALANCE_REQUIRED=10.0
MAX_BALANCE_UTILIZATION=0.8

# =============================================================================
# MODE & SAFETY
# =============================================================================
DRY_RUN=true
VERBOSE=false
COOLDOWN_SECONDS=10
SIM_BALANCE=1000

# =============================================================================
# LTM (LIQUIDITY TIME MODEL)
# =============================================================================
USE_LTM=false
LTM_POLICY_PATH=ltm_policy.yaml
LTM_USE_DECAY=true

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# STATISTICS & MONITORING
# =============================================================================
ENABLE_STATS=true
TRADE_LOG_FILE=trades.json
USE_RICH_OUTPUT=true

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
USE_WSS=true
USE_UVLOOP=false
USE_ORJSON=false

# =============================================================================
# BACKTEST CONFIGURATION
# =============================================================================
ASSET=SOL
MARKET_TYPE=up_or_down
TIMEFRAME_MINUTES=15
BACKTEST_START=2024-09-13
BACKTEST_END=2024-12-13
BACKTEST_DAYS=90
INITIAL_CAPITAL=5000
CURRENCY=USDC
GAMMA_API_BASE=https://gamma-api.polymarket.com
CLOB_API_BASE=https://clob.polymarket.com
MAX_REQUESTS_PER_SECOND=10
REQUEST_TIMEOUT=30
DATA_RAW_PATH=data/raw
DATA_PROCESSED_PATH=data/processed
DATA_TRADES_PATH=data/trades
DATA_RESULTS_PATH=data/results
