# ================================================
# POLYMARKET BOT - AUTHENTICATION CONFIGURATION
# ================================================
# This template follows the working pattern from exemplo_polymarket
#
# IMPORTANT: Copy this file to 'pmpe.env' and fill in your values
#   cp pmpe.env.template pmpe.env
#
# NEVER commit pmpe.env to git - it contains sensitive data!
# ================================================

# ================================================
# AUTHENTICATION (REQUIRED)
# ================================================

# Your private key exported from Polymarket
# Go to: Polymarket Settings > Export Private Key
# Format: 0x followed by 64 hex characters
PRIVATE_KEY=0x_your_private_key_here

# Your Polymarket proxy wallet address (FUNDER)
# CRITICAL: This is NOT the same as your signer address!
# Find it at: https://polymarket.com/@YOUR_USERNAME
# It's the address shown on your profile page
FUNDER_ADDRESS=0x_your_proxy_wallet_address_here

# Original wallet address (optional, for reference)
WALLET_ADDRESS=

# Signature type (DO NOT CHANGE unless you know what you're doing)
# 1 = Magic.link/Email accounts (most common)
# 0 = Direct EOA wallet (MetaMask connected directly)
SIGNATURE_TYPE=1

# ================================================
# MARKET CONFIGURATION (OPTIONAL)
# ================================================

# Specific token ID (optional - bot can auto-discover markets)
TOKEN_ID=

# Market slug (optional - for specific market targeting)
MARKET_SLUG=

# ================================================
# TRADING PARAMETERS
# ================================================

# Maximum combined cost to trigger arbitrage
# e.g., 0.991 means buy if YES + NO < $0.991
TARGET_PAIR_COST=0.991

# Number of shares to buy per trade
ORDER_SIZE=5

# Order type / time-in-force:
# FOK = Fill-or-Kill (all-or-nothing)
# FAK = Fill-and-Kill (partial allowed)
# GTC = Good-Til-Cancelled
ORDER_TYPE=FOK

# Minimum seconds between trades
COOLDOWN_SECONDS=10

# ================================================
# MODE
# ================================================

# Simulation mode (no real orders)
# true = paper trading, false = real trading
DRY_RUN=true

# Simulated balance for dry run mode
SIM_BALANCE=100

# Extra diagnostic logging
VERBOSE=false

# ================================================
# WEBSOCKET (OPTIONAL)
# ================================================

# Use WebSocket for real-time order book updates
USE_WSS=false

# WebSocket URL (default is correct for most users)
WS_URL=wss://ws-subscriptions-clob.polymarket.com

# ================================================
# RISK MANAGEMENT (OPTIONAL)
# ================================================

# Maximum daily loss before stopping (0 = disabled)
MAX_DAILY_LOSS=0

# Maximum position size (0 = disabled)
MAX_POSITION_SIZE=0

# Maximum trades per day (0 = disabled)
MAX_TRADES_PER_DAY=0

# Minimum balance required to trade
MIN_BALANCE_REQUIRED=10.0

# Maximum % of balance to use
MAX_BALANCE_UTILIZATION=0.8

# ================================================
# LTM (LIQUIDITY TIME MODEL) - OPTIONAL
# ================================================

# Enable time-bucket based trading strategy
USE_LTM=false

# Path to LTM policy file
LTM_POLICY_PATH=ltm_policy.yaml

# Enable pair-cost decay model
LTM_USE_DECAY=true

# ================================================
# MULTI-MARKET CONFIGURATION
# ================================================

# Assets to monitor (comma-separated)
# Available: btc, eth, sol
ASSETS=btc,eth,sol

# ================================================
# MARKET MAKER (Bot 2) PARAMETERS
# ================================================
# Use with: python -m polymarket_bot --market-maker

# Base spread percentage (0.02 = 2%)
MM_BASE_SPREAD=0.02

# Maximum position size per side ($)
MM_MAX_POSITION=100

# Price movement threshold to trigger requote (0.005 = 0.5%)
MM_REQUOTE_THRESHOLD=0.005

# Minimum seconds between requotes
MM_REQUOTE_INTERVAL=5.0

# ================================================
# LOGGING
# ================================================

# Enable statistics tracking
ENABLE_STATS=true

# Trade log file (JSONL format for speed)
TRADE_LOG_FILE=trades.jsonl

# Use rich console output
USE_RICH_OUTPUT=true
